<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRestRequestHistory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/default_item_padding_bottom"
    android:paddingLeft="@dimen/default_item_padding_left"
    android:paddingRight="@dimen/default_item_padding_right"
    android:paddingTop="@dimen/default_item_padding_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/methodTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner_rest_method"
            android:text="Some name here"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/default_secondary_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/urlTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Some name here"

                android:textColor="@color/textColor"
                android:textSize="@dimen/default_primary_text" />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Some name here"
                android:textColor="@color/textColorLight"
                android:textSize="@dimen/default_date_text" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>