<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_weight="2"
    android:paddingLeft="@dimen/default_item_padding_left"
    android:paddingRight="@dimen/default_item_padding_right"
    android:paddingTop="@dimen/default_item_padding_top"
    android:paddingBottom="@dimen/default_item_padding_bottom"
    android:background="@color/white"
    android:id="@+id/layoutKeyValue"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/keyTextView"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text = "@string/key"/>

    <TextView
        android:id="@+id/valueTextView"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text = "@string/value"/>

    <include layout="@layout/divider"/>

</LinearLayout>