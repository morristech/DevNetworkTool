<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Some name here"
        android:id="@+id/textView"
        android:textColor="@color/textColor"
        android:paddingLeft="@dimen/default_item_padding_left"
        android:paddingRight="@dimen/default_item_padding_right"
        android:paddingTop="@dimen/default_item_padding_top"
        android:paddingBottom="@dimen/default_item_padding_bottom"/>

    <include layout="@layout/divider"/>

</LinearLayout>